{
  "name": "Renren Status Downloader",
  "version": "1.1",
  "manifest_version": 3,
  "description": "Download your Renren status by using this quick script.",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
    "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
	"css": ["nStyles.css"]
    }
  ],
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ]
}

